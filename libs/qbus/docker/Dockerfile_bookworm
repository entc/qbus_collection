FROM debian:12-slim

RUN apt-get update && apt-get install -y \
  gcc \
  g++ \
  git \
  cmake \
  default-libmysqlclient-dev \
  libsqlite3-dev \
  libpcre3-dev \
#  libcurl4-openssl-dev \
  libssl-dev \
  libnss3 \
  locales \
  libglib2.0-0 \
  uuid-dev \
  libxml2-dev \
  && rm -rf /val/lib/apt/lists/*

# install libcurl from sources, see issue
# https://github.com/curl/curl/issues/18448
RUN git clone https://github.com/curl/curl.git /usr/src/curl \
 && mkdir /usr/src/curl/build \
 && cd /usr/src/curl/build \
 && cmake .. \
 && make install

ARG CACHEBUST=1
